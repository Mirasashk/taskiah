{
    "hosting": {
        "public": "hosting",
        "site": "taskiah-api",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "app"
            }
        ]
    },
    "functions": {
        "source": "functions",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "*.local"
        ]
    }
}
